
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 40px;
    }
    table img {
      width: 60px;
      height: auto;
      object-fit: cover;
      border-radius: 4px;
    }
  </style>
</head>
<body>

<div class="container">
  <h2 class="text-center mb-4">Movie List</h2>

  <table class="table table-bordered table-hover table-striped align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Poster</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Director</th>
        <th>Language</th>
        <th>Runtime</th>
        <th>Release Date</th>
        <th>created_At</th>
        <th>Updated_At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (movies.length > 0) { %>
        <% movies.forEach(movie => { %>
          <tr>
            <td><%= movie.movie_id %></td>
            <td>
              <% if (movie.poster_url) { %>
                <img src="<%= movie.poster_url %>" alt="Poster">
              <% } else { %>
                <img src="https://via.placeholder.com/60x90" alt="No Image">
              <% } %>
            </td>
            <td><%= movie.title %></td>
            <td><%= movie.genre %></td>
            <td><%= movie.director %></td>
            <td><%= movie.language %></td>
            <td><%= movie.runtime %> min</td>
            <td><%= movie.release_date ? movie.release_date.toISOString().split('T')[0] : 'N/A' %></td>
            <td><%= movie.created_at ? movie.created_at.toISOString().split('T')[0] : 'N/A' %></td>
            <td><%= movie.updated_at ? movie.updated_at.toISOString().split('T')[0] : 'N/A' %></td>
            <td>
              <a href="/editmovie/<%= movie.movie_id %>" class="btn btn-sm btn-warning">Edit</a>
              <a href="/deletemovie/<%= movie.movie_id %>" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="9" class="text-center">No movies found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
