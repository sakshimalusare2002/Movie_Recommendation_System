<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User Dashboard - Movie Recommendation</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

  <style>
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f4f6f9;
      color: #333;
    }

    .dashboard {
      display: flex;
      height: 100vh;
      overflow: hidden;
    }

    .sidebar {
      width: 240px;
      background-color: #1f1f2e;
      color: #fff;
      padding: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      text-align: center;
      color: #fff;
      margin-bottom: 20px;
    }

    .nav-link {
      color: #ddd;
      text-decoration: none;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 12px;
      border-radius: 6px;
    }

    .nav-link.active,
    .nav-link:hover {
      background-color: #333950;
      color: #fff;
    }

    .main {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .topbar {
      height: 60px;
      background-color: #fff;
      padding: 0 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #ddd;
    }

    .search-input {
      border: 1px solid #ccc;
      padding: 8px 12px;
      border-radius: 4px;
      width: 300px;
    }

    /* Profile dropdown */
    .profile-dropdown {
      position: relative;
    }

    .profile-btn {
      border: none;
      background: none;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .profile-btn .material-icons {
      font-size: 40px;
      color: #555;
    }

    .profile-content {
      display: none;
      position: absolute;
      right: 0;
      top: 110%;
      background: white;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
      padding: 10px;
      min-width: 180px;
      z-index: 10;
      border-radius: 6px;
    }

    .profile-dropdown:focus-within .profile-content,
    .profile-dropdown:hover .profile-content {
      display: block;
    }

    .profile-content p {
      margin: 4px 0;
      font-size: 0.9rem;
      color: #333;
    }

    .logout-btn {
      margin-top: 8px;
      padding: 6px 12px;
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
      width: 100%;
    }

    .content-area {
      padding: 20px;
      overflow-y: auto;
      background-color: #f9f9fb;
      flex-grow: 1;
    }
  </style>
</head>
<body>

<div class="dashboard">

  <!-- Sidebar -->
  <nav class="sidebar">
    <h2>ðŸŽ¬ MyMovies</h2>
    <a href="#" class="nav-link active"><span class="material-icons">stars</span> Recommendations</a>
    <a href="#" class="nav-link"><span class="material-icons">video_library</span> Library</a>
    <a href="#" class="nav-link"><span class="material-icons">favorite</span> Liked</a>
    <a href="#" class="nav-link"><span class="material-icons">history</span> Recently Watched</a>
  </nav>

  <!-- Main Area -->
  <div class="main">

    <!-- Topbar -->
    <header class="topbar">
      <input type="text" class="search-input" placeholder="Search movies by title or genre" />

      <% if (user) { %>
      <div class="profile-dropdown" tabindex="0">
        <button class="profile-btn">
          <span class="material-icons">account_circle</span>
          <%= user.name %>
        </button>
        <div class="profile-content">
          <p><strong><%= user.name %></strong></p>
          <p><%= user.email %></p>
          <form action="/logout" method="POST" onsubmit="return confirm('Are you sure you want to logout the account?');">
            <button class="logout-btn" type="submit">Logout</button>
          </form>
        </div>
      </div>
      <% } %>
    </header>

    <!-- Content Area  dhghdsh-->
    <main class="content-area">
      <h3>Welcome to your dashboard</h3>
      <p>Your personalized movie recommendations will appear here.</p>
      <div class="row">
  <% if (movies && movies.length > 0) { %>
    <% movies.forEach((movie) => { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow">
          <img src="<%= movie.poster_url %>" class="card-img-top" alt="Movie Poster" style="height: 300px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.genre %></p>
          </div>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>No movies available</p>
  <% } %>
</div>
    </main>
  </div>
</div>
</body>
</html>
